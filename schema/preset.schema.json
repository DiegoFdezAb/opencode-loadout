{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenCode Preset",
  "description": "Configuration for a single OpenCode preset",
  "type": "object",
  "required": ["name", "description", "plugins"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "description": "Unique identifier for this preset"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of plugins to enable"
    },
    "requires": {
      "type": "object",
      "description": "Plugin version requirements",
      "additionalProperties": {
        "type": "string"
      }
    },
    "config": {
      "type": "object",
      "description": "Plugin-specific configurations",
      "properties": {
        "opencode": {
          "type": "object",
          "properties": {
            "plugin": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "omo": {
          "type": "object",
          "description": "Oh-My-OpenCode configuration"
        },
        "orchestra": {
          "type": "object",
          "description": "Open Orchestra configuration"
        }
      }
    }
  }
}
