{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenCode Profile",
  "description": "Project-specific profile configuration",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "description": "Unique identifier for this profile"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "omo": {
      "type": "object",
      "description": "Oh-My-OpenCode configuration",
      "properties": {
        "agents": {
          "type": "object",
          "description": "Agent-specific overrides"
        },
        "disabled_agents": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "disabled_hooks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "disabled_mcps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "google_auth": {
          "type": "boolean"
        }
      }
    },
    "orchestra": {
      "type": "object",
      "description": "Open Orchestra configuration"
    }
  }
}
